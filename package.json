{
  "name": "@scale-codec/monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "pnpm compiler:update-samples",
    "test:all": "pnpm jake test:all",
    "test:unit": "vitest run",
    "test:e2e": "pnpm jake test:e2e-spa",
    "build": "pnpm jake build",
    "type-check": "tsc --noEmit",
    "clean": "pnpm jake clean",
    "publish:all": "pnpm jake publish-all",
    "lint:base": "prettier-eslint \"**/*.{js,ts,vue}\"",
    "lint:check": "pnpm lint:base --list-different",
    "lint:fix": "pnpm lint:base --write",
    "check-code-integrity": "pnpm jake check-code-integrity",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "compiler:update-samples": "pnpm jake compiler-samples:compile",
    "benchmark": "pnpm --filter benchmark start"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@microsoft/api-documenter": "^7.21.4",
    "@microsoft/api-extractor": "^7.34.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jake": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@vitest/ui": "^0.23.1",
    "chalk": "^4.1.2",
    "consola": "^2.15.3",
    "del": "^6.1.1",
    "esbuild": "^0.17.5",
    "eslint": "^8.33.0",
    "eslint-config-alloy": "^4.9.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.9.0",
    "fs-extra": "^10.1.0",
    "jake": "^10.8.5",
    "prettier": "^2.8.3",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^7.1.0",
    "type-fest": "^3.5.5",
    "typescript": "^4.9.5",
    "vitest": "^0.28.4",
    "zx": "4.3.0"
  },
  "engines": {
    "node": ">16.8"
  },
  "engineStrict": true
}
