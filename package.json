{
    "name": "@scale-codec/monorepo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "postinstall": "pnpm compiler:update-samples",
        "gulp-ts": "gulp --require esbuild-register -f gulpfile.ts",
        "test:all": "pnpm test:unit && pnpm build && pnpm test:e2e",
        "test:unit": "jest",
        "test:e2e": "pnpm gulp-ts -- testE2e",
        "build": "pnpm gulp-ts -- build",
        "build:declarations": "pnpm gulp-ts -- buildDeclarations",
        "type-check": "tsc --noEmit",
        "clean": "pnpm gulp-ts -- clean",
        "publish:all": "pnpm gulp-ts -- publishAll",
        "lint": "prettier-eslint \"**/*.(ts|js)\"",
        "check-code-integrity": "pnpm gulp-ts -- checkCodeIntegrity",
        "api:extract-local": "pnpm gulp-ts -- extractApisLocalBuild",
        "api:extract": "pnpm gulp-ts -- extractApis",
        "api:docs": "pnpm gulp-ts -- documentApis",
        "api:all": "pnpm gulp-ts -- extractAndDocumentApis",
        "docs:dev": "pnpm --filter @scale-codec/docs dev",
        "docs:build": "pnpm --filter @scale-codec/docs build",
        "docs:compile-ns": "pnpm gulp-ts -- compileDocsNamespace",
        "compiler:update-samples": "pnpm gulp-ts -- compileCompilerSamples"
    },
    "devDependencies": {
        "@changesets/cli": "^2.17.0",
        "@jest/types": "^27.2.5",
        "@microsoft/api-documenter": "^7.13.63",
        "@microsoft/api-extractor": "^7.18.16",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@types/gulp": "^4.0.9",
        "@types/jest": "^27.0.2",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "chalk": "^4.1.2",
        "concurrently": "^6.3.0",
        "consola": "^2.15.3",
        "del": "^6.0.0",
        "esbuild-jest": "^0.5.0",
        "esbuild-register": "^3.0.0",
        "eslint": "^8.1.0",
        "eslint-config-alloy": "^4.4.0",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-vue": "^7.20.0",
        "esno": "^0.10.1",
        "execa": "^5.1.1",
        "gulp": "^4.0.2",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "make-dir": "^3.1.0",
        "path-exists": "^4.0.0",
        "prettier": "^2.4.1",
        "prettier-eslint": "^13.0.0",
        "prettier-eslint-cli": "^5.0.1",
        "rollup": "^2.58.3",
        "rollup-plugin-esbuild": "^4.6.0",
        "typescript": "^4.4.4",
        "zx": "^4.2.0"
    }
}
