{
    "name": "@scale-codec/monorepo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "postinstall": "pnpm compiler:update-samples",
        "gulp-ts": "gulp --require esbuild-register -f gulpfile.ts",
        "test:all": "run-s test:unit build test:e2e",
        "test:unit": "jest",
        "test:e2e": "pnpm gulp-ts -- testE2e",
        "build": "pnpm gulp-ts -- build",
        "build:ts": "pnpm gulp-ts -- buildTS",
        "type-check": "tsc --noEmit",
        "clean": "pnpm gulp-ts -- clean",
        "publish:all": "pnpm gulp-ts -- publishAll",
        "lint:check": "run-p lint:eslint-check lint:prettier-check",
        "lint:fix": "run-s lint:eslint-fix lint:prettier-fix",
        "lint:prettier-check": "prettier . -c",
        "lint:prettier-fix": "prettier . -w",
        "lint:eslint-check": "eslint .",
        "lint:eslint-fix": "eslint . --fix",
        "check-code-integrity": "pnpm gulp-ts -- checkCodeIntegrity",
        "api:extract:local": "pnpm gulp-ts -- extractApisLocalBuild",
        "api:extract": "pnpm gulp-ts -- extractApis",
        "api:docs": "pnpm gulp-ts -- documentApis",
        "api:all": "pnpm gulp-ts -- extractAndDocumentApis",
        "docs:dev": "pnpm --filter docs dev",
        "docs:build": "pnpm --filter docs build",
        "docs:compile-ns": "pnpm gulp-ts -- compileDocsNamespace",
        "compiler:update-samples": "pnpm gulp-ts -- compileCompilerSamples",
        "compiler:clean-samples": "pnpm gulp-ts -- cleanCompilerSamples",
        "benchmark": "pnpm --filter benchmark start"
    },
    "devDependencies": {
        "@changesets/cli": "^2.21.1",
        "@jest/types": "^27.5.1",
        "@microsoft/api-documenter": "^7.15.3",
        "@microsoft/api-extractor": "^7.19.4",
        "@types/gulp": "^4.0.9",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "chalk": "^4.1.2",
        "consola": "^2.15.3",
        "del": "^6.0.0",
        "esbuild": "^0.14.21",
        "esbuild-jest": "^0.5.0",
        "esbuild-register": "^3.3.2",
        "esbuild-runner": "^2.2.1",
        "eslint": "^7.32.0",
        "eslint-config-alloy": "^4.5.1",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-vue": "^8.5.0",
        "gulp": "^4.0.2",
        "jest": "^27.5.1",
        "make-dir": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "prettier-eslint": "^13.0.0",
        "typescript": "^4.6.2",
        "zx": "4.3.0"
    },
    "engines": {
        "node": ">16.8"
    },
    "engineStrict": true
}
