{
    "name": "@scale-codec/monorepo",
    "version": "0.0.0",
    "scripts": {
        "test:all": "pnpm test:unit && pnpm build && pnpm test:e2e",
        "test:unit": "jest",
        "test:e2e": "node -r esbuild-register ./scripts/test-e2e",
        "build": "rollup -c",
        "type-check": "tsc --noEmit",
        "clean": "rimraf packages/*/dist",
        "publish:all": "node -r esbuild-register scripts/publish-all",
        "lint": "prettier-eslint \"**/*.(ts|js)\"",
        "check-code-integrity": "node -r esbuild-register scripts/check-code-integrity"
    },
    "devDependencies": {
        "@jest/types": "^27.0.6",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@types/jest": "^26.0.23",
        "@typescript-eslint/eslint-plugin": "^4.28.1",
        "@typescript-eslint/parser": "^4.28.1",
        "chalk": "^4.1.1",
        "concurrently": "^6.2.0",
        "consola": "^2.15.3",
        "esbuild-jest": "^0.5.0",
        "esbuild-register": "^2.6.0",
        "eslint": "^7.30.0",
        "eslint-config-alloy": "^4.1.0",
        "eslint-plugin-cypress": "^2.11.3",
        "execa": "^5.1.1",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "path-exists": "^4.0.0",
        "prettier": "^2.3.2",
        "prettier-eslint": "^12.0.0",
        "prettier-eslint-cli": "^5.0.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.52.7",
        "rollup-plugin-dts": "^3.0.2",
        "rollup-plugin-esbuild": "^4.5.0",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.5"
    }
}
