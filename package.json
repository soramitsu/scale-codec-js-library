    "eslint-plugin-vue": "^9.0.1",
    "jake": "^10.8.5",
    "jest": "^27.5.1",
    "jest-immutable-matchers": "^3.0.0",
    "make-dir": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.1",
