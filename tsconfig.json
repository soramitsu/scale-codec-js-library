{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  // Include every .ts file in the project, for development
  "exclude": [
    "**/dist",
    "./types",
    "./e2e-spa",
    "./packages/namespace*/**",
    // temporary
    "./packages/docs/**"
  ]
}
