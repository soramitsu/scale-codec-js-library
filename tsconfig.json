{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@scale-codec/*": ["./packages/*/src/lib.ts"]
    }
  },
  // Include every .ts file in the project, for development
  // But exclude this:
  "exclude": ["**/dist", "./tsc-build", "./e2e-spa", "./packages/namespace*/**"]
}
