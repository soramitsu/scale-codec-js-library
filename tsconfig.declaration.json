{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true
  },
  "include": [
    "./packages/core/src",
    "./packages/enum/src",
    "./packages/definition-compiler/src",
    "./packages/definition-runtime/src",
    "./packages/util/src"
  ],
  "exclude": ["**/*.spec.ts", "**/__tests__", "./packages/definition-compiler/tests"]
}
